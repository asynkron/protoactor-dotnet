<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <OutputType>Library</OutputType>
        <PublishReadyToRun>false</PublishReadyToRun>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Grpc.Tools" Version="2.47.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Proto.Cluster" Version="1.0.0-rc2.7" />
        <PackageReference Include="Proto.Cluster.CodeGen" Version="1.0.0-rc2.7" />
        <PackageReference Include="Proto.Cluster.Consul" Version="1.0.0-rc2.7" />
        <PackageReference Include="Proto.Cluster.Kubernetes" Version="1.0.0-rc2.7" />
    </ItemGroup>

    <ItemGroup>
      <Protobuf Include="protos.proto" GrpcServices="none" />
    </ItemGroup>

    <ItemGroup>
      <ProtoGrain Include="protos.proto" />
    </ItemGroup>
</Project>
